    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
  "@separate-tracks/shared-types": "workspace:*"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "nodemon": "^3.1.0"
  }
